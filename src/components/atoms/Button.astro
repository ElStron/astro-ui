---
interface ButtonProps {
  href?: string;
  class?: string;
  titleVariants?: string;
  attributes?: Record<string, unknown>;
}
const { href, class: className, attributes, variant, ...props} = Astro.props;
import {titleVariants} from '@utils/getColor.js';

const variantClasses = titleVariants[ variant as keyof typeof titleVariants] || titleVariants.default;
---
 {
   href ? (
     <a href={href} {...attributes}  class={`p-3 text-center rounded-md font-bold cursor-pointer max-w-[max-content] ${variantClasses} ${className}`} {...props} >
       <slot />
     </a>
   ) : (
     <button {...attributes} class={` ${variantClasses} ${className}  ${attributes?.disabled && 'disabled:opacity-50 disabled:cursor-not-allowed'}`} {...props}>
       <slot />
     </button>
   )
 }